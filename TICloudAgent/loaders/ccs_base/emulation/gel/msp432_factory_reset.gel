int gGEL_Repeat;

OnTargetConnect()
{
}

hotmenu MSP432_Factory_Reset ()
{
  // Trigger POR through DP CTRL/STAT[CDBGRSTREQ] bit
  DP_RESET = 1;

  // Wait 1msec
  gGEL_Repeat = 0;
  GEL_SetTimer(2, 1, "MSP432_Reboot_Reset()");
}

// This function is called from the device specific GEL file in case
// of a complete device lock and after user acknowledge
MSP432_Remote_Reset()
{
  if (GEL_IsConnected() == 0)
  {
    // connect the DAP first
    GEL_Connect();
  }
	// Trigger POR through DP CTRL/STAT[CDBGRSTREQ] bit
  DP_RESET = 1;

  // Wait 1msec
  gGEL_Repeat = 0;
  GEL_SetTimer(2, 1, "MSP432_Reboot_Reset()");
}

MSP432_Reboot_Reset()
{
  if (gGEL_Repeat == 0)
  {
    gGEL_Repeat = 1;

    // Trigger reboot reset
    *(unsigned int *) (0xE0044000) = 0x0000695A;
    *(unsigned int *) (0xE0044004) = 0x00000001;
    *(unsigned int *) (0xE0044008) = 0x00000000;
    *(unsigned int *) (0xE0044010) = 0x00006902;

    GEL_TextOut("Mass erase executed. Please terminate debug session, power-cycle and restart debug session.\n");
    GEL_CancelTimer(1);
    GEL_EvalOnTarget( "CORTEX_M4_0", "gGEL_Factory_Reset_Done = 1" );
  }
}

MSP432_Board_Reset()
{
    GEL_AdvancedReset("Board Reset");
}

StartUp(major, minor, revision, build)
{
  if ((major > 6) || ((major == 6) && (minor >= 2)))
  {
    GEL_HandleTargetError( ".*-1170.*", "\nNo connection possible. This could be caused by the device having gone to low power mode and disabling JTAG PINs.
You have the option to either toggle reset or try to use SWD instead.\n ", 0, "Toggle RST", "MSP432_Board_Reset()" );
  }
}